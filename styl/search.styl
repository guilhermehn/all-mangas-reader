.search-field
  margin-bottom 50px

input.search-input
  padding 10px
  width 60%
  height search-input-height
  font-size search-input-font-size
  border-radius form-input-border-radius 0 0 form-input-border-radius
  outline none

.search-btn
  font-size search-input-font-size
  border-radius 0 form-input-border-radius form-input-border-radius 0

.search-results-table
  width 100%
  border 0
  border-collapse collapse
  animation open-animation 0.5s ease

  th, td
    position relative
    padding 10px 5px
    border-bottom 1px solid search-results-border-color

  tr:hover
    td
      background search-results-row-bg-color
      cursor pointer

.search-results-site-list
  text-align right

  a
    display inline-block
    margin-right 5px

    &:last-child
      margin-right 0

  img
    width 16px
    height 16px

.search-info
  margin-bottom 20px

.info-panel-title
  font-size 1.2em
  margin 0.5em 0

.info-panel
  font-size 0.8em

  td
    border 0
    padding 5px 10px 0 0

    &:first-child
      text-align right

.info-panel-toolbar
  margin-top 20px

.info-panel-toolbar-link
  span
    line-height 16px
    vertical-align middle

.info-panel-toolbar-source-icon
  margin-right 0.5em
  width 16px
  height 16px
  vertical-align middle

.reading-list-check
  position absolute
  right 0
  top 0
  padding 0.4em
  opacity 0.8

  > span
    font-size 0.8em
