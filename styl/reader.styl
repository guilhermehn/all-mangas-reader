.reader
  padding-bottom 2em
  min-height 100%
  color #fff
  background-color #000

  .progress-bar
    position fixed
    left 0
    top 0
    width 100%
    height 3px

    > div
      background-image lienar-gradient(to right, color-secondary-1-light, color-secondary-1-lighter)

.reader-header
  text-align center
  overflow hidden

.reader-manga-page
  text-align center
  margin-bottom 1em

  img
    max-width 99%

.reader-nav
  text-align center

  .btn
    margin 0

  strong
    display inline-block
    padding 0 1em

.reader-notice
  position absolute
  left 50%
  top 50%
  transform translate(-50%, -50%)
