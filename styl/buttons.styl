button,
.btn
  padding 10px 20px
  margin-right 1em
  border-radius 3px
  color button-color
  background-color button-bg-color
  transition all 0.1s ease-out

  &:last-child
    margin-right 0

  &:hover
    background-color button-bg-color-hover

a.btn
  display inline-block
  text-decoration none

.btn-confirm
  background-color darken(base-active-color, 10)

  &:hover
    background-color base-active-color-hover

.btn-primary
  color color-secondary-1-lighter
  background-color color-secondary-1

  &:hover
    background color-secondary-1-light

.btn-danger
  color color-secondary-2-lighter
  background-color color-secondary-2

  &:hover
    background color-secondary-2-light
