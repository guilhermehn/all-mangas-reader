.settings-section
  margin-bottom 50px

  h3
    border-bottom 1px solid rgba(0, 0, 0, .1)
    padding 10px 0
    text-transform uppercase

.settings-option
  margin-bottom 20px

  label
    cursor pointer
    margin-right 20px

  input[type="checkbox"],
  input[type="radio"]
    margin-right 10px

.migration-notice
  border 1px solid darken(base-bg-color, 10)
  padding 0 1em 1em
  background-color lighten(base-bg-color, 10)
  border-radius 5px

  button
    padding 10px 20px
    font-weight bold
    font-size 1.2em
    margin-right 1em
