*
  box-sizing border-box

html,
body,
#root
  height 100%

body
  font-size base-font-size
  font-family base-font-family

.ta-left
  text-align left

.ta-right
  text-align right

.ta-center
  text-align center

.notice
  border 1px solid darken(base-bg-color, 10)
  padding 0 1em 1em
  text-align center
  background-color lighten(base-bg-color, 10)
  border-radius 5px
  animation open-animation 0.5s ease

  button
    font-weight bold
    font-size 1.2em
