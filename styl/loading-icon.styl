.loading-icon-holder
  display inline-block
  margin-bottom 20px
  height loading-icon-size
  animation open-animation 0.5s ease

.loading-icon-text
  display inline-block
  padding-left 10px
  vertical-align top
  line-height loading-icon-size
  color loading-icon-color

.loading-icon
  background none
  position relative
  display inline-block
  width loading-icon-size
  height loading-icon-size

  > div
    position absolute
    display block
    top 0
    left 0
    width loading-icon-size
    height loading-icon-size
    border-radius 80px
    box-shadow 0 (loading-icon-size*0.1) 0 0 loading-icon-color
    animation rotate360 loading-icon-speed linear infinite

